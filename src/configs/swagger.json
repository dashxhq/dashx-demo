{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "DashX Demo"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/register": {
      "post": {
        "summary": "Register as a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["first_name", "last_name", "email", "password"],
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "John"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User created"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email already exist"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login as an existing user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string",
                      "example": "JWT Token"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Incorrect email or password."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/update-profile": {
      "patch": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Update the current user's profile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["first_name", "last_name", "email"],
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "John"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Profile updated."
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number",
                          "example": 1
                        },
                        "first_name": {
                          "type": "string",
                          "example": "John"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "Doe"
                        },
                        "email": {
                          "type": "string",
                          "example": "john@example.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/profile": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Fetch current user's profile",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully fetched."
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number",
                          "example": 1
                        },
                        "first_name": {
                          "type": "string",
                          "example": "John"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "Doe"
                        },
                        "email": {
                          "type": "string",
                          "example": "john@example.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/forgot-password": {
      "post": {
        "summary": "Send an email with password reset link",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Check your inbox for a link to reset your password."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/reset-password": {
      "post": {
        "summary": "Set a new password using password reset token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["token", "password"],
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "password": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "You have successfully reset your password."
                    }
                  }
                }
              }
            }
          },
          "422": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Your reset password link has expired."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/contact": {
      "post": {
        "summary": "Send us a contact request.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "feedback"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "feedback": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Thanks for reaching out! We will get back to you soon."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/posts": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Fetch all posts.",
        "parameters" : [ {
          "name" : "limit",
          "in" : "query",
          "description" : "Number of posts to be returned",
          "schema" : {
            "type" : "integer",
            "format" : "int64"
          }
        },
        {
          "name" : "offset",
          "in" : "query",
          "description" : "Number of posts to be skipped",
          "schema" : {
            "type" : "integer",
            "format" : "int64"
          }
        } ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "posts": {
                      "type": "array",
                      "items" : {
                        "type" : "object",
                        "properties" : {
                          "id": {
                            "type": "number",
                            "example": 3
                          },
                          "text": {
                            "type": "string",
                            "example": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                          },
                          "user_id": {
                            "type": "number",
                            "example": 1
                          },
                          "created_at": {
                            "type": "string",
                            "example": "2022-07-04T18:30:00.000Z"
                          },
                          "updated_at": {
                            "type": "string",
                            "example": "2022-07-04T18:30:00.000Z"
                          },
                          "bookmarked_at": {
                            "type": "string",
                            "example": "2022-07-04T18:30:00.000Z"
                          },
                          "user": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "number",
                                "example": 1
                              },
                              "first_name": {
                                "type": "string",
                                "example": "John"
                              },
                              "last_name": {
                                "type": "string",
                                "example": "Doe"
                              },
                              "email": {
                                "type": "string",
                                "example": "john@example.com"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Create a post.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully created post."
                    },
                    "posts": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number",
                          "example": 3
                        },
                        "text": {
                          "type": "string",
                          "example": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        },
                        "user_id": {
                          "type": "number",
                          "example": 1
                        },
                        "created_at": {
                          "type": "string",
                          "example": "2022-07-04T18:30:00.000Z"
                        },
                        "updated_at": {
                          "type": "string",
                          "example": "2022-07-04T18:30:00.000Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Missing required field",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Missing field text."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/posts/{post_id}/toggle-bookmark": {
      "put": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Bookmark/Unbookmark a post.",
        "parameters" : [ {
          "name" : "post_id",
          "in" : "path",
          "description" : "ID of post to bookmark or unbookmark",
          "required" : true,
          "schema" : {
            "type" : "integer",
            "format" : "int64",
            "example": 3
          }
        } ],
        "responses": {
          "204": {
            "content": null
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/posts/bookmarked": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Get all bookmarked posts.",
        "parameters" : [ {
          "name" : "limit",
          "in" : "query",
          "description" : "Number of bookmarked posts to be returned",
          "schema" : {
            "type" : "integer",
            "format" : "int64"
          }
        },
        {
          "name" : "offset",
          "in" : "query",
          "description" : "Number of bookmarked posts to be skipped",
          "schema" : {
            "type" : "integer",
            "format" : "int64"
          }
        } ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bookmarks": {
                      "type": "array",
                      "items" : {
                        "type" : "object",
                        "properties" : {
                          "id": {
                            "type": "number",
                            "example": 3
                          },
                          "text": {
                            "type": "string",
                            "example": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                          },
                          "user_id": {
                            "type": "number",
                            "example": 1
                          },
                          "created_at": {
                            "type": "string",
                            "example": "2022-07-04T18:30:00.000Z"
                          },
                          "updated_at": {
                            "type": "string",
                            "example": "2022-07-04T18:30:00.000Z"
                          },
                          "bookmarked_at": {
                            "type": "string",
                            "example": "2022-07-04T18:30:00.000Z"
                          },
                          "bookmark_id": {
                            "type": "number",
                            "example": "1"
                          },
                          "user": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "number",
                                "example": 1
                              },
                              "first_name": {
                                "type": "string",
                                "example": "John"
                              },
                              "last_name": {
                                "type": "string",
                                "example": "Doe"
                              },
                              "email": {
                                "type": "string",
                                "example": "john@example.com"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/products": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Fetch products from DashX",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully fetched."
                    },
                    "products": {
                      "type": "string",
                      "example": "Array of products and their prices from DashX"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/products/{slug}": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Fetch product from DashX",
        "parameters" : [ {
          "name" : "slug",
          "in" : "path",
          "description" : "Name of product to be fetched",
          "required" : true,
          "schema" : {
            "type" : "string",
            "example": "pen"
          }
        } ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully fetched."
                    },
                    "product": {
                      "type": "string",
                      "example": "Product and their prices from DashX"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "servers": [
    {
      "description": "Node.js Backend",
      "url": "https://node.dashxdemo.com/",
      "id": "node"
    },
    {
      "description": "Python Backend",
      "url": "https://python.dashxdemo.com/",
      "id": "python"
    },
    {
      "description": "PHP Backend",
      "url": "https://php.dashxdemo.com/",
      "id": "php"
    },
    {
      "description": "Ruby Backend",
      "url": "https://ruby.dashxdemo.com/",
      "id": "ruby"
    }
  ]
}
